@inherits BlazorStateComponent

<div class="toast fade show" role="alert">
    <div class="toast-header">
        <string class="mr-auto">@Item.Header</string>
        <button @onclick="@DelItem" type="button" class="ml-2 mb-1 close">
            <span>&times;</span>
        </button>
    </div>
    <div class="toast-body">@Item.Body</div>
</div>

@code {

    [Parameter]
    protected ToastItem Item { get; set; }

    protected void DelItem()
    {
        Mediator.Send(new DelToastAction { Item = Item });
    }

}
